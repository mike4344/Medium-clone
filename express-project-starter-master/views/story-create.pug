extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action='/story/create' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        input(type='hidden' name='userId' value=userId)
        +field('Title', 'title', story.title)
        +field('Subtitle', 'subtitle', story.subtitle)
        +field('Picture URL', 'pictureURL', story.pictureURL, 'url', "https://imgur.com/your-link-here")
        +field('Story', 'body', story.body, 'textarea', 'Write your story here...')

        div
            button(type="submit") Post your story
            a(href='/') Cancel
 
