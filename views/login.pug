extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action='/login' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Email Address','email', email, 'email')
        +field('Password', 'password', null, 'password')
        div
            button(type='submit') Login
            a(href="/") Cancel
    div
        p: a(href="/signup") Don't have an account?
        button(type='button' id='random-demo-user') Random Demo User
    script(src='/javascripts/randomDemoUser.js')
