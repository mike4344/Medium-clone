extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action=`/users/${userId}/edit` method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Screen Name', 'screenName', user.screenName)
        +field('Picture URL', 'pictureURL', user.pictureURL, 'url', "https://imgur.com/your-link-here")
        +field('Biography', 'biography', user.biography, 'textarea', 'Tell the community something about yourself...')

        div
            button(type="submit") Update Profile
            a(href=`/users/${userId}`) Cancel