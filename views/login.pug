//- extends layout.pug
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;900&display=swap" rel="stylesheet")
        //- link(rel="stylesheet" href="/stylesheets/profileBanner.css")
        link(rel="stylesheet" href="/stylesheets/splash.css")
        //- link(rel='stylesheet' href='/stylesheets/footer.css')
        title Animedium
    body 
include utils.pug

block content
    form(action='/login' method='post' class='login-form__container')
        div(class='login-form__greeting') Log in to 
            span(class='login-form__greeting-logo') ANIMEDIUM
        +validationErrorSummary(errors)
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Email Address: ','email', email, 'email', null, 'login-form__email')
        +field('Password: ', 'password', null, 'password', null, 'login-form__password')
        div(class='login-form__submit-container')
            button(type='submit' class='login-form__submit') Login
            a(href="/" class='login-form__cancel') Cancel
        div(class='login-form__no-account-options')
            p: a(href="/signup" class='login-form__signup' data-hover='Click to Signup') No account?
            p(class='login-form__or') Or
            button(type='button' id='random-demo-user' data-hover='Login as an Anime character') Random Demo User
    link(rel="stylesheet", href="/stylesheets/login.css")
    script(src='/javascripts/randomDemoUser.js')
