extends layout.pug 

include utils.pug 

block content 
    +validationErrorSummary(errors)
    form(action='/signup' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Email Address', 'emailAddress', user.emailAddress, 'email', 'jojo@adventures.com')
        +field('Screen Name', 'screenName', user.screenName)
        +field('Password', 'password', user.password, 'password')
        +field('Confirm Password', 'confirmPassword', user.confirmPassword, 'password')
        div 
            button(type="submit") Signup 
            a(href='/') Cancel 
    div 
        p   
            a(href='/login') Already have an account?