extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action=`/stories/${story.id}/edit` method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Title', 'title', story.title)
        +field('Subtitle', 'subtitle', story.subtitle)
        +field('Picture URL', 'pictureURL', story.pictureURL, 'url', "https://imgur.com/your-link-here")
        +field('Story', 'body', story.body, 'textarea')

        div
            button(type="submit") Update Your Story
            a(href=`/stories/${story.id}`) Cancel
