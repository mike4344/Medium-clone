extends layout

append head 
    link(rel="stylesheet" href="/stylesheets/homepage.css")
    
    //- link(rel="stylesheet" href="/stylesheets/storybox.css")
    
    
include utils.pug

block content

    div(class="homepage-stories")
        div(class="h2-container")
            H2(class="recent-stories") Newest Stories
        div(class='story-box-container')
            each story in recentStories 
                - let date = convertDate(story.createdAt);
                - let user = grabUser(story.userId);
                +storyBox(story.id, story.title, story.subtitle, story.userId, story.pictureURL, date) 

    
